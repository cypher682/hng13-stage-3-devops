# Docker Images for Blue and Green services
BLUE_IMAGE=yimikaade/wonderful:devops-stage-two
GREEN_IMAGE=yimikaade/wonderful:devops-stage-two

# Active pool configuration (blue or green)
ACTIVE_POOL=blue

# Release identifiers for each pool
RELEASE_ID_BLUE=blue-release-1.0.0
RELEASE_ID_GREEN=green-release-1.0.0

# Application port (default: 3000)
PORT=3000

# Slack webhook URL for alerts (required)
***REMOVED***=https://***REMOVED***/services/T09AMR8A9C3/B09PH2U05JP/ovooK7eCLsiBi7lIVtB233Ou

# Error rate threshold percentage (default: 2)
ERROR_RATE_THRESHOLD=2

# Number of requests in sliding window (default: 200)
WINDOW_SIZE=200

# Alert cooldown in seconds (default: 300)
ALERT_COOLDOWN_SEC=300

# Disable startup spam (default: false)
ENABLE_STARTUP_NOTIFICATION=false

ALERT_IDENTIFIER="SHADOW-SLAVE"
